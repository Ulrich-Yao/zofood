<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>BACKEND MENU</title>
</head>

<body class="container mt-5">
    <!--AJOUTER MENU-->
    <div class="card">
        <h5 class="card-header"> AJOUTER MENU</h5>
        <div class="card-body">
            <form method="POST" action='/addMenu'>
                <div class="row">
                    <div class="col mt-2 mb-2">
                        <input type="text" class="form-control" placeholder="Nom du menu" name='name'>
                    </div>
                    <div class="col mt-2 mb-2">
                        <input type="text" class="form-control" placeholder="Image d'illustration" name='picture'>
                    </div>
                </div>
                <div class="row">
                    <div class="col mt-2 mb-2">
                        <input type="text" class="form-control" placeholder="Prix" name='price'>
                    </div>
                    <div class="col mt-2 mb-2">
                        <input type="text" class="form-control" placeholder="Accompagnement" name='accompagnement'>
                    </div>
                </div>
                <div class="row">
                    <div class="col mt-2 mb-2">
                        <input type="text" class="form-control" placeholder="Description" name='description'>
                    </div>
                    <div class="col mt-2 mb-2">
                        <input type="text" class="form-control" placeholder="Restaurant" name='restaurant'>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Enregistrer le Menu</button>
            </form>
        </div>
    </div>
    <!--AJOUTER RESTAURANT-->
    <div class="card mt-5">
        <h5 class="card-header"> AJOUTER RESTAURANT</h5>
        <div class="card-body">
            <div class="card-body">
                <form method="POST" action='/addRestaurant'>
                    <div class="row">
                        <div class="col mt-2 mb-2">
                            <input type="text" class="form-control" placeholder="Nom du Restaurant" name='RestaurantName'>
                        </div>
                        <div class="col mt-2 mb-2">
                            <input type="text" class="form-control" placeholder="Numero de téléphone" name='phoneNumber'>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mt-2 mb-2">
                            <input type="text" class="form-control" placeholder="Image d'illustration" name='RestaurantPicture'>
                        </div>
                        <div class="col mt-2 mb-2">
                            <input type="text" class="form-control" placeholder="Ville" name='UserLocal'>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mt-2 mb-2">
                            <input type="text" class="form-control" placeholder="RestaurantSpecialite" name='RestaurantSpecialite'>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Enregistrer le Restaurant</button>
                </form>
            </div>
        </div>
    </div>


    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

